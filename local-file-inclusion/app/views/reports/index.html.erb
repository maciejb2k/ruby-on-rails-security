<div class="max-w-2xl bg-white shadow-lg rounded-lg p-6 w-full">
  <h1 class="text-2xl font-bold text-gray-700 mb-4">Download Reports</h1>

  <ul class="divide-y divide-gray-200">
    <% @files.each do |file| %>
      <li class="py-3 flex justify-between items-center">
        <span class="text-gray-800"><%= file %></span>
        <a href="<%= reports_unsafe_download_path(file: file) %>"
            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
          Download
        </a>
      </li>
    <% end %>
  </ul>
</div>
