<h2 class="text-xl font-semibold">Rails SQLi: Lock</h2>

<div class="flex mb-4 items-center gap-3">
  <%= link_to "Powrót do listy", root_path, class: "underline text-blue-600" %>
  <span>|</span>
  <%= button_to "Zresetuj bazę danych", reset_db_path, method: :post, class: "inline-block underline text-red-600 hover:text-red-800 cursor-pointer", data: { turbo: false } %>
</div>

<% if flash[:notice].present? %>
  <div class="bg-green-200 text-green-800 p-2 rounded mb-8">
    <strong>✅ Sukces:</strong> <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="bg-red-200 text-red-800 p-2 rounded mb-8">
    <strong>❌ Błąd:</strong> <%= flash[:alert] %>
  </div>
<% end %>

<section class="mb-6">
  <h3 class="text-lg font-bold mb-2">Kod metody:</h3>
  <pre class="bg-gray-100 p-2">
User.where('id > 1').lock(params[:lock_param])</pre>
</section>

<section class="mb-6">
  <h3 class="text-lg font-bold mb-2">Przykłady użycia:</h3>
  <ul class="list-disc ml-5 space-y-1">
    <li><code class="bg-gray-100 p-1">FOR UPDATE</code></li>
    <li><code class="bg-gray-100 p-1">FOR SHARE</code></li>
    <li><code class="bg-gray-100 p-1">FOR UPDATE; DROP TABLE users; --</code></li>
    <li><code class="bg-gray-100 p-1">FOR UPDATE WAIT 10</code></li>
  </ul>
</section>

<section class="mb-6">
  <h3 class="text-lg font-bold mb-2">Parametr <code>lock_param</code></h3>
  <%= form_with url: injections_lock_path, method: :post, local: true, class: "space-y-4" do %>
    <div>
      <%= label_tag :lock_param, "Wprowadź wartość:", class: "block font-medium mb-1" %>
      <%= text_field_tag :lock_param, params[:lock_param], class: "border px-2 py-1 w-full" %>
    </div>
    <%= submit_tag "Wyślij", class: "bg-blue-600 text-white px-3 py-1 rounded" %>
  <% end %>
</section>

<% if @error.present? %>
  <div class="bg-red-200 text-red-800 p-2 rounded mb-4">
    <strong>Błąd:</strong>
    <p><%= @error %></p>
  </div>
<% end %>

<% if @queries.any? %>
  <div class="mb-4">
    <h4 class="font-bold mb-2">Wygenerowane zapytania SQL:</h4>
    <ul class="list-disc ml-5 space-y-1">
      <% @queries.each do |q| %>
        <li><code><%= q %></code></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <h4 class="font-bold mb-2">Wynik (result):</h4>
  <% if @result.present? %>
    <p class="bg-gray-50 p-2 border rounded">
      <%= @result.inspect %>
    </p>
  <% else %>
    <div class="text-gray-500 italic">
      Brak dostępnych wyników.
    </div>
  <% end %>
</div>
